@model coursework.Models.Employees

@{
    ViewBag.Title = "Просмотр";
}

<h2>Просмотр</h2>
@if (ViewBag.access)
{
    <div>
        <h4>Работник</h4>
        <hr />
        <dl class="dl-horizontal">


            <dt>
                Фамилия работника
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                Имя работника
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                Отчество работника
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Patronymic)
            </dd>

            <dt>
                Логин
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Username)
            </dd>

            <dt>
                Пароль
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Password)
            </dd>

            <dt>
                Должность
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Roles.Name)
            </dd>

            <dt>
                Зарплата
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Salary)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.EmployeeID }) |
        @Html.ActionLink("Вернуться назад", "Index")
    </p>
}
else
{
    <div>
        <p class="lead" style="color: red;">@ViewBag.Message</p>
    </div>
}
@model IEnumerable<coursework.Models.ModelForSelection5>
@{
    ViewBag.Title = "Выборка должностей и количества сотрудников на каждой должности";
}
@if (ViewBag.access)
{
    <h2>
        Выборка должностей и количества сотрудников на каждой должности
    </h2>

    <table class="table">
        <tr>
            <th>
                Должность
            </th>
            <th>
                Количество сотрудников
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.PositionTitle
                </td>
                <td>
                    @item.EmployeeCount
                </td>
            </tr>
        }
    </table>
}
else
{
    <div>
        <p class="lead" style="color: red;">@ViewBag.Message</p>
    </div>
}
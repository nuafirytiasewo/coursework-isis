@model IEnumerable<coursework.Models.Services>

@{
    ViewBag.Title = "Услуги";
}

<h2>Услуги</h2>
@if (ViewBag.access)
{
    <p>
        @Html.ActionLink("Добавить новую запись", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th>
                Цена
            </th>
            <th>
                Категория
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceCategories.Name)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.ServiceID }) |
                    @Html.ActionLink("Просмотр", "Details", new { id = item.ServiceID }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.ServiceID })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div>
        <p class="lead" style="color: red;">@ViewBag.Message</p>
    </div>
}